<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.ups.overdrill">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- MainActivity -->
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Info -->
        <activity android:name=".info.InfoActivity" android:screenOrientation="portrait" />

        <!-- Hiscore -->
        <activity android:name=".hiscore.HiscoreActivity" android:screenOrientation="portrait" />

        <!-- Info: sensor -->
        <activity android:name=".info.SensorInfoActivity" android:screenOrientation="portrait" />

    </application>

</manifest>